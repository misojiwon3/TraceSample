#!/bin/sh

realpath () {
(
  TARGET_FILE="$1"

  cd "$(dirname "$TARGET_FILE")"
  TARGET_FILE=$(basename "$TARGET_FILE")

  COUNT=0
  while [ -L "$TARGET_FILE" -a $COUNT -lt 100 ]
  do
      TARGET_FILE=$(readlink "$TARGET_FILE")
      cd "$(dirname "$TARGET_FILE")"
      TARGET_FILE=$(basename "$TARGET_FILE")
      COUNT=$(($COUNT + 1))
  done

  if [ "$TARGET_FILE" = "." -o "$TARGET_FILE" = ".." ]; then
    cd "$TARGET_FILE"
    TARGET_FILEPATH=
  else
    TARGET_FILEPATH=/$TARGET_FILE
  fi

  echo "$(pwd -P)/$TARGET_FILE"
)
}

# Allow user and template_declares (see below) to add java options.
addJava () {
  java_opts="$java_opts $1"
}

# Allow user to specify java options. These get listed first per bash-template.
if [ -n "$JAVA_OPTS" ]
then
  addJava "$JAVA_OPTS"
fi

# Loads a configuration file full of default command line options for this script.
loadConfigFile() {
  cat "$1" | sed '/^\#/d;s/\r$//' | sed 's/^-J-X/-X/' | tr '\r\n' ' '
}


real_script_path="$(realpath "$0")"
app_home="$(realpath "$(dirname "$real_script_path")")"
lib_dir="$(realpath "${app_home}/../lib")"

app_mainclass=ai.t2x.trace.Main

script_conf_file="/opt/trace/conf/process.ini"
app_classpath="$lib_dir/trace.trace-trace-1.0.jar:$lib_dir/org.scala-lang.scala-library-2.12.2.jar:$lib_dir/ch.qos.logback.logback-classic-1.2.3.jar:$lib_dir/ch.qos.logback.logback-core-1.2.3.jar:$lib_dir/org.slf4j.slf4j-api-1.7.25.jar:$lib_dir/com.typesafe.scala-logging.scala-logging_2.12-3.5.0.jar:$lib_dir/org.scala-lang.scala-reflect-2.12.2.jar:$lib_dir/com.typesafe.akka.akka-actor_2.12-2.5.11.jar:$lib_dir/com.typesafe.config-1.3.2.jar:$lib_dir/org.scala-lang.modules.scala-java8-compat_2.12-0.8.0.jar:$lib_dir/com.typesafe.akka.akka-remote_2.12-2.5.11.jar:$lib_dir/com.typesafe.akka.akka-stream_2.12-2.5.11.jar:$lib_dir/com.typesafe.akka.akka-protobuf_2.12-2.5.11.jar:$lib_dir/org.reactivestreams.reactive-streams-1.0.2.jar:$lib_dir/com.typesafe.ssl-config-core_2.12-0.2.2.jar:$lib_dir/org.scala-lang.modules.scala-parser-combinators_2.12-1.0.4.jar:$lib_dir/io.netty.netty-3.10.6.Final.jar:$lib_dir/io.aeron.aeron-driver-1.7.0.jar:$lib_dir/io.aeron.aeron-client-1.7.0.jar:$lib_dir/org.agrona.agrona-0.9.12.jar:$lib_dir/com.typesafe.akka.akka-http_2.12-10.1.1.jar:$lib_dir/com.typesafe.akka.akka-http-core_2.12-10.1.1.jar:$lib_dir/com.typesafe.akka.akka-parsing_2.12-10.1.1.jar:$lib_dir/com.typesafe.akka.akka-http-spray-json_2.12-10.1.1.jar:$lib_dir/io.spray.spray-json_2.12-1.3.4.jar:$lib_dir/io.swagger.swagger-jaxrs-1.5.18.jar:$lib_dir/io.swagger.swagger-core-1.5.18.jar:$lib_dir/org.apache.commons.commons-lang3-3.2.1.jar:$lib_dir/org.yaml.snakeyaml-1.18.jar:$lib_dir/io.swagger.swagger-models-1.5.18.jar:$lib_dir/io.swagger.swagger-annotations-1.5.18.jar:$lib_dir/com.google.guava.guava-20.0.jar:$lib_dir/javax.validation.validation-api-1.1.0.Final.jar:$lib_dir/javax.ws.rs.jsr311-api-1.1.1.jar:$lib_dir/org.reflections.reflections-0.9.11.jar:$lib_dir/org.javassist.javassist-3.21.0-GA.jar:$lib_dir/com.github.swagger-akka-http.swagger-akka-http_2.12-0.14.0.jar:$lib_dir/com.fasterxml.jackson.module.jackson-module-scala_2.12-2.9.4.jar:$lib_dir/com.fasterxml.jackson.core.jackson-core-2.9.4.jar:$lib_dir/com.fasterxml.jackson.core.jackson-annotations-2.9.4.jar:$lib_dir/com.fasterxml.jackson.core.jackson-databind-2.9.4.jar:$lib_dir/com.fasterxml.jackson.module.jackson-module-paranamer-2.9.4.jar:$lib_dir/com.thoughtworks.paranamer.paranamer-2.8.jar:$lib_dir/com.fasterxml.jackson.dataformat.jackson-dataformat-yaml-2.9.4.jar:$lib_dir/ch.megard.akka-http-cors_2.12-0.3.0.jar:$lib_dir/io.jaegertracing.jaeger-core-0.29.0.jar:$lib_dir/io.jaegertracing.jaeger-thrift-0.29.0.jar:$lib_dir/org.apache.thrift.libthrift-0.9.2.jar:$lib_dir/org.apache.httpcomponents.httpclient-4.2.5.jar:$lib_dir/org.apache.httpcomponents.httpcore-4.2.4.jar:$lib_dir/commons-logging.commons-logging-1.1.1.jar:$lib_dir/commons-codec.commons-codec-1.6.jar:$lib_dir/io.opentracing.opentracing-api-0.31.0.jar:$lib_dir/io.opentracing.opentracing-util-0.31.0.jar:$lib_dir/io.opentracing.opentracing-noop-0.31.0.jar:$lib_dir/com.google.code.gson.gson-2.8.2.jar:$lib_dir/com.squareup.okhttp3.okhttp-3.9.0.jar:$lib_dir/com.squareup.okio.okio-1.13.0.jar"


# If a configuration file exist, read the contents to $opts
[ -f "$script_conf_file" ] && opts=$(loadConfigFile "$script_conf_file")

exec java $java_opts -classpath $app_classpath $opts $app_mainclass "$@"
